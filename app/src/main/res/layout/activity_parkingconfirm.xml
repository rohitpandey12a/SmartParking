<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_centerHorizontal="true"
	tools:context=".Booking">
	<com.google.android.material.floatingactionbutton.FloatingActionButton
		android:id="@+id/PChome"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:clickable="true"
		android:focusable="true"
		android:translationX="0sp"
		android:translationY="0sp"
		app:srcCompat="@drawable/home"
		tools:ignore="MissingConstraints" />
	
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:layout_centerHorizontal="true"
		android:gravity="center"
		android:orientation="vertical"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/PChome"
		tools:ignore="MissingConstraints">
		
		<Button
			android:id="@+id/costdetail"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="@string/cost_details" />
		
		<Button
			android:id="@+id/Buttonbook"
			android:layout_width="298dp"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginLeft="50sp"
			android:layout_marginRight="50sp"
			android:text="@string/book_my_parking_slot" />
		
		<TextView
			android:id="@+id/TextViewAvailbilty"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:layout_marginLeft="50sp"
			android:layout_marginRight="50sp"
			android:textSize="24sp"
			tools:ignore="RtlHardcoded" />
		
		<TextView
			android:id="@+id/TextViewCost"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="left"
			android:layout_marginLeft="50sp"
			android:layout_marginRight="50sp"
			android:textSize="24sp"
			tools:ignore="RtlHardcoded" />
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

